<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.UrbanFarm" parent="Theme.Material3.DayNight.NoActionBar" >
        <item name="materialCardViewStyle">@style/Widget.App.CustomCardLandingPage</item>
        <item name="toolbarStyle">@style/Widget.App.CustomTopAppBar</item>
    </style>

    <style name="Widget.App.CustomCardLandingPage" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Widget.App.CustomTopAppBar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="cornerSizeBottomLeft">30dp</item>
    </style>

</resources>