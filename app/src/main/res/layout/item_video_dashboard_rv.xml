<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_video_card"
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:cardCornerRadius="12dp">
        
        <ImageView
            android:id="@+id/iv_video_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_card_bawangmerah_tanamanku"
            android:scaleType="centerCrop"/>
        
    </com.google.android.material.card.MaterialCardView>
    
    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="PERBEDAAN TANAMAN HIDROPONIK DAN ORGANIK, MANA YANG LEBIH ... "
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="@color/black"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/iv_video_card"/>

    <TextView
        android:id="@+id/tv_video_channel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="YouTube - Hidroponik"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/black"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/tv_video_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>