<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.beranda.DetailTanamanPageActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/top_app_bar_detail_tanaman_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/TopAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/top_app_bar"
                app:navigationIcon="@drawable/baseline_arrow_back_24"
                app:title="@string/detail_tanaman_page_topappbar_title"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ImageView
        android:id="@+id/iv_bg_half_detail_tanaman_page"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_dark_blur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_app_bar_detail_tanaman_page" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iv_detail_tanaman_page"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="90dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_card_detail_tanaman_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_placeholder_detail_tanaman" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_title_detail_tanaman_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/detail_tanaman_page_title_placeholder"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="textStart"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_detail_tanaman_page"/>

    <TextView
        android:id="@+id/tv_subtitle_detail_1_detail_tanaman_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/opensans_medium"
        android:text="@string/detail_tanaman_page_detail_subtitle_1"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_detail_tanaman_page"/>

    <TextView
        android:id="@+id/tv_subtitle_detail_2_detail_tanaman_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensans_medium"
        android:text="@string/detail_tanaman_page_detail_subtitle_2"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_detail_1_detail_tanaman_page"/>

    <TextView
        android:id="@+id/tv_subtitle_detail_3_detail_tanaman_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/opensans_medium"
        android:text="@string/detail_tanaman_page_detail_subtitle_3"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_detail_2_detail_tanaman_page"/>

    <TextView
        android:id="@+id/tv_header_deskripsi_detail_tanaman_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:text="@string/detail_tanaman_page_detail_subheader_1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_detail_3_detail_tanaman_page"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_mulai_menanam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_deskripsi_detail_tanaman_page" >

        <TextView
            android:id="@id/tv_deskripsi_content_tanamanku_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"/>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mulai_menanam"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/tertiary_green"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/btn_mulai_menanam_text"
        android:fontFamily="@font/opensans_semibold"
        android:textColor="@color/primary_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>

