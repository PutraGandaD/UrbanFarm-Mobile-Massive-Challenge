<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    tools:context=".Profil">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_full" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/view_corner_radius"
        android:layout_marginTop="150dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="start"
                android:text="Profil Anda"
                android:textColor="@color/white"
                android:textSize="28dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="155dp"
                android:layout_height="155dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/primary_green"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/profil"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Putra Ganda Dewata"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:layout_marginTop="12dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:textColor="@color/primary_green"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="20dp"
                android:backgroundTint="@color/secondary_green"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Postingan Anda"
                android:textAllCaps="false"
                android:textColor="@color/primary_green"
                android:gravity="center_vertical"
                android:background="@color/material3_primary_color"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="18dp"
                android:paddingHorizontal="20dp"
                android:drawableStart="@drawable/ic_media"
                android:drawablePadding="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Pengaturan Akun"
                android:textAllCaps="false"
                android:textColor="@color/primary_green"
                android:gravity="center_vertical"
                android:background="@color/material3_primary_color"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="18dp"
                android:paddingHorizontal="20dp"
                android:drawableStart="@drawable/ic_profil"
                android:drawablePadding="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Pengaturan Aplikasi"
                android:textAllCaps="false"
                android:textColor="@color/primary_green"
                android:gravity="center_vertical"
                android:background="@color/material3_primary_color"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="18dp"
                android:paddingHorizontal="20dp"
                android:drawableStart="@drawable/ic_settings"
                android:drawablePadding="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:text="Pusat Bantuan"
                android:textColor="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:text="Tentang Aplikasi"
                android:textColor="#999999"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:text="Keluar"
                android:textColor="#FF0000"/>

        </LinearLayout>

</FrameLayout>