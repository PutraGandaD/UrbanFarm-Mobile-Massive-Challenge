<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landing_nav"
    app:startDestination="@id/landingPageFragment">

    <fragment
        android:id="@+id/landingPageFragment"
        android:name="com.putragandad.urbanfarm.fragments.landingpage.LandingPageFragment"
        android:label="fragment_landing_page"
        tools:layout="@layout/fragment_landing_page" >
        <action
            android:id="@+id/action_landingPageFragment_to_loginPageFragment"
            app:destination="@id/loginPageFragment"
            app:popUpTo="@id/landingPageFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_landingPageFragment_to_registerPageFragment"
            app:destination="@id/registerPageFragment"
            app:popUpTo="@id/landingPageFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/loginPageFragment"
        android:name="com.putragandad.urbanfarm.fragments.loginpage.LoginPageFragment"
        android:label="fragment_login_page"
        tools:layout="@layout/fragment_login_page" >
        <action
            android:id="@+id/action_login_to_beranda"
            app:destination="@id/beranda_nav"
            app:popUpTo="@id/landingPageFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/registerPageFragment"
        android:name="com.putragandad.urbanfarm.fragments.registerpage.RegisterPageFragment"
        android:label="fragment_register_page"
        tools:layout="@layout/fragment_register_page">
        <action
            android:id="@+id/action_registerFinished_to_loginPage"
            app:destination="@id/loginPageFragment"
            app:popUpTo="@id/landingPageFragment"/>
    </fragment>

    <include app:graph="@navigation/beranda_nav"/>
</navigation>